@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Products</h1>
    <p><a href="https://learn.microsoft.com/aspnet/core"></a>.</p>
</div>

<!DOCTYPE html>
<html>

<head>
    <title>Products</title>

    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th,
        td {
            border: 2px solid #dddddd;
            text-align: center;
            padding: 20px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>


    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>

    <script>
        var app = angular.module('DeltaCoreApp', []);

        app.controller('ProductsController', function ($scope, $http) {
            $http.get('/api/Products/GetProducts')
                .then(function (response) {
                    $scope.products = response.data;
                });
        });
    </script>

</head>

<body>
    <center>
        @model List<DeltaCore.Models.Product>

        <div ng-app="DeltaCoreApp" ng-controller="ProductsController" class="text-center">
            @* <h1 class="display-4">Products</h1> *@
            <table>
                <thead>
                    <tr>
                        <th>Product Id</th>
                        <th>Product Name</th>
                        <th>Product Description</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="product in products">
                        <td>{{ product.productId }}</td>
                        <td>{{ product.productName }}</td>
                        <td>{{ product.productDescription }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

    </center>
</body>

</html>
